{
  "manifest_version": 3,
  "name": "QuickMeme",
  "version": "1.0",
  "description": "Create memes from any image with text overlay and customization",

  "permissions": ["contextMenus", "activeTab", "storage"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickMeme - Create Memes"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
